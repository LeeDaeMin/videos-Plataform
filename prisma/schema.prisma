// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario{
  id Int @id @default(autoincrement())
  username String @db.VarChar(255)
  user_comentario user_comentario[]
}

model admin{
  id Int @id @default(autoincrement())
  username String @db.VarChar(255)
}

model video{
  id Int @id @default(autoincrement())
  visualizaciones Int 
  author String
  fecha DateTime   @default(now())
  titulo String
  descripcion String
  comentario comentario[]
  contenido_extra contenido_extra[]
}

model contenido_extra{
  id Int @id @default(autoincrement())
  videoR    video?    @relation(fields: [videoId], references: [id])
  videoId  Int
  descripcion String 
  archivo String
}

model comentario{
  id Int @id @default(autoincrement())
  videoR    video?    @relation(fields: [videoId], references: [id])
  videoId  Int
  user_comentario user_comentario[]
  comentario String @db.VarChar(255)
}

model user_comentario{
  id Int @id @default(autoincrement())
  userR    usuario?    @relation(fields: [user_id], references: [id])
  user_id  Int
  comentarioR    comentario?    @relation(fields: [comentarioId], references: [id])
  comentarioId  Int
}

